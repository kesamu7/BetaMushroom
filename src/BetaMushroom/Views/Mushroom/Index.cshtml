@model List<BetaMushroom.Models.MushroomActivity>

<!--This page will display the users complete collection of mushrooms.-->

<h1>@ViewBag.Title</h1>

<h1>Your collection.</h1>

<table class="table">
    <tr>
        <th>Type</th>
        <th>Notes</th>
    </tr>


    @foreach (var shroom in Model)
    {
        <tr>
            <td>@shroom.Type</td>
            <td>@shroom.Notes</td>
        </tr>

    }
</table>

@if (Model.Count == 0)
{
    <p>No Mushrooms in your collection yet.</p>

}

<p><a asp-controller="Mushroom" asp-action="Add">Add a mushroom</a></p>

