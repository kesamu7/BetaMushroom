@model BetaMushroom.Models.ProfileSearchViewModel

@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

<form asp-action="Search">
    <div class="form-horizontal">
        <h4>Find a member</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Gender" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<BetaMushroom.Models.Gender>()"></select>
                <span asp-validation-for="Gender" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MinAge" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MinAge" class="form-control" />
                <span asp-validation-for="MinAge" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaxAge" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaxAge" class="form-control" />
                <span asp-validation-for="MaxAge" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
     </div>
    
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


